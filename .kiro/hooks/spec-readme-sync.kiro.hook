{
  "enabled": true,
  "name": "Spec to README Sync",
  "description": "Automatically updates README.md file when specification documents are modified",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      ".kiro/steering/product.md"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Specification documents have been updated. Please review the changes in the spec files and update the README.md file accordingly to ensure it reflects the current project status, features, and documentation. Focus on keeping the README synchronized with any changes to the API, build process, development guidelines, validation procedures, test scenarios, or migration information."
  }
}